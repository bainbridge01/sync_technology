<p style="color: green"><%= notice %></p>
<div id="articles">
  <% @articles.each do |article| %>
  <div class="card text-center">
    <div class="card-header">By Edafe </div>
    <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
    <p class="card-text"><%= article.description %></p>
    <%= link_to "show", article_path(article), class:"btn btn-primary"  %>
    <%= link_to "Edit", edit_article_path(article), class:"btn btn-secondary"  %>
    <%= link_to "Delete", article_path(article), class:"btn btn-danger"  %>
  </div>
  <div class="card-footer text-muted"><%= article.created_at %></div>
  </div>
    
  <% end %>
</div>



